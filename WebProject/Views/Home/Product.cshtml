@model WebProject.Models.Product

@{
}
<div class="main_container_Product">
    <div class="Product">
        <form method="post">
            <img class="Product_Image" src="/@Model.Image" />
            <div class="Name_Cost">
                <label class="Name_Product">@Model.Name</label>
                <label class="Product_Cost">@Model.Cost ₽</label>
                <label class="About">@Model.Description</label>
                <label>Размер</label>

                <select class="Size" name="Size">
                    <option value="S">S</option>
                    <option value="M">M</option>
                    <option value="L">L</option>
                    <option value="XL">XL</option>
                </select>

                <label> Кол-во: @Model.Count</label>
                @if (Model.Count <= 0)
                {
                    <div class="Buy_Count">
                        <input name="productId" hidden class="form-control form-control-sm" value="@Model.Id" type="text" />
                        <input type="submit" class="Buy_button;" disabled value="Товара нет в наличиии">                       
                    </div>
                }
                else
                {
                    <div class="Buy_Count">
                        <input name="productId" hidden class="form-control form-control-sm" value="@Model.Id" type="text" />
                        <input type="submit" class="Buy_button;"  value="Добавить в корзину">
                    </div>
                
                }
            </div>
        </form>
    </div>
</div>
