
@model WebProject.Views.Home.AutorizationModel
<form class="RegAuthorizathion" asp-action="Autorization" method="post">
    <h1>Авторизация</h1>

    <input name="login" class="form-control" type="text" placeholder="Логин" />
    <input name="password" class="form-control" type="text" placeholder="Пароль" />
    <input class="btn btn-primary" type="submit" value="Войти" />
    <a class="btn btn-primary mt-5" asp-action="Registration">Не зарегистрированы?</a>
</form>
